# Stage 1: Build
FROM rust:1.75-slim as builder

# 安装必要的系统依赖
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /build

# 先复制依赖配置文件以利用缓存
COPY s2e/Cargo.toml s2e/Cargo.lock ./s2e/
COPY shared/Cargo.toml ./shared/
COPY shared/src ./shared/src

# 复制源代码
COPY s2e/src ./s2e/src

# 构建 release 版本
WORKDIR /build/s2e
RUN cargo build --release

# Stage 2: Runtime
FROM debian:bookworm-slim

# 安装运行时依赖
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 创建应用目录
WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /build/s2e/target/release/s2e-relayer /app/

# 创建配置和日志目录
RUN mkdir -p /app/config /app/logs /app/keys

# 创建非特权用户
RUN useradd -m -u 1000 relayer && \
    chown -R relayer:relayer /app

USER relayer

# 暴露端口
EXPOSE 8081

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=40s \
    CMD curl -f http://localhost:8081/health || exit 1

# 启动服务
CMD ["/app/s2e-relayer"]

