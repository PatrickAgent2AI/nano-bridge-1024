# Stage 1: Build
FROM rust:1.75-slim as builder

# 安装必要的系统依赖
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /build

# 先复制依赖配置文件
COPY e2s-submitter/Cargo.toml e2s-submitter/Cargo.lock ./e2s-submitter/
COPY shared/Cargo.toml ./shared/
COPY shared/src ./shared/src

# 复制源代码
COPY e2s-submitter/src ./e2s-submitter/src

# 构建 release 版本
WORKDIR /build/e2s-submitter
RUN cargo build --release

# Stage 2: Runtime
FROM debian:bookworm-slim

# 安装运行时依赖
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 创建应用目录
WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /build/e2s-submitter/target/release/e2s-submitter /app/

# 创建目录
RUN mkdir -p /app/config /app/logs /app/queue /app/keys

# 创建非特权用户
RUN useradd -m -u 1000 relayer && \
    chown -R relayer:relayer /app

USER relayer

# 暴露端口
EXPOSE 8082

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=40s \
    CMD curl -f http://localhost:8082/health || exit 1

# 启动服务
CMD ["/app/e2s-submitter"]

